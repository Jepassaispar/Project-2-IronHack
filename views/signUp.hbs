<section class="sign form-container">
    <header class="form-header">
        <h1 class="form-title">Let's start eating better</h1>
    </header>
    <form method="post" action="/foo" id="form_user">
        <div class="form-item-wrapper flexed-item">
            <label for="firstname" class="label-ref label">Name</label>
            <input id="firstname" type="text" class="box-shadow-input input-text input" placeholder="Albert" required
                value="coucou">
        </div>
        <div class="form-item-wrapper flexed-item">
            <label for="lastname" class="label-ref label">Last Name</label>
            <input id="lastname" type="text" class="box-shadow-input input-text input" placeholder="Biceps" required
                value="cava">
        </div>
        <div class="form-item-wrapper flexed-item">
            <label for="email" class="label-ref label">Email</label>
            <input id="email" type="email" class="box-shadow-input input-text input"
                placeholder="albert.biceps@gmail.com" required value="yo@gui.com">
        </div>
        <div class="form-item-wrapper flexed-item">
            <label for="password" class="label-ref label">Password</label>
            <input id="password" type="password" class="box-shadow-input input-text input" placeholder="••••••" required
                value="1234">
        </div>
        <button class="btn logButton">Create Account</button>
    </form>
    <p class="form-sub-infos">Already have an account ? <a href="/logIn" class="button-link-form">Log In</a></p>
</section>