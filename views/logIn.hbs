<section class="sign form-container">
    <header class="form-header">
        <h1 class="form-title">Great to see you again !</h1>
    </header>

    <form method="post" action="/signin" id="form_user">
        <div class="form-item-wrapper flexed-item">
            <label for="email" class="label-ref label">Email</label>
            <input id="email" type="email" class="input-text input" placeholder="albert.biceps@gmail.com" required
                value="yo@gui.com">
        </div>
        <div class="form-item-wrapper flexed-item">
            <label for="password" class="label-ref label">Password</label>
            <input id="password" type="password" class="input-text input" placeholder="••••••" required value="1234">
        </div>
        <button class="logButton">Log in !</button>
    </form>
    <p class="form-sub-infos">Not a member yet ? <a href="/signUp" class="button-link-form">Create an account</a></p>
</section>