<div class="container">
    <div class="list">
        {{#each businesses}}
        <div>
            <div class="name">{{this.name}}</div>
            <p>Adresse : {{this.lieu.adress}} <br> {{this.lieu.zipcode}} Paris </p>
            <ul class="week">
                Horaires:
                <li>Lundi : {{this.ouverture.Lundi}}</li>
                <li>Mardi : {{this.ouverture.Mardi}}</li>
                <li>Mercredi : {{this.ouverture.Mercredi}}</li>
                <li>Jeudi : {{this.ouverture.Jeudi}}</li>
                <li>Vendredi : {{this.ouverture.Vendredi}}</li>
                <li>Samedi : {{this.ouverture.Samedi}}</li>
                <li>Dimanche : {{this.ouverture.Dimanche}}</li>
            </ul>
        </div>
        {{/each}}
    </div>

    <div class="map" id="mapDisplay"></div>

</div>